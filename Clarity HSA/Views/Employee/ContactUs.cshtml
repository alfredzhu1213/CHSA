
@{
    ViewBag.Title = "Contact Us";
}

<h3>Contact Us</h3>

<br />
<p>Please send us a message using the below form.</p>

<form action="/Employee/ContactSubmit" method="post">
    <textarea name="message" class="form-control"></textarea>
    <br /><br />
    <input type="submit" class="btn btn-primary" value="Submit" onclick="alert('Thanks for contacting us! You will receive a response shortly.');" />
</form>